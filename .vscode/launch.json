{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start PHP Server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "${workspaceFolder}/src"
            ],
            "cwd": "${workspaceFolder}",
            "port": 8000,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}